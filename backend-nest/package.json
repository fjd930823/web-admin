    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.0",
    "@types/knex": "^0.15.2",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.1.2",
